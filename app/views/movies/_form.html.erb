<div class="container form">
  <%= form_with(model: movie) do |form| %>
    <% if movie.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

        <ul>
          <% movie.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, style: "display: block; color: #FFFFFF; padding-top: 5px" %>
      <%= form.text_field :name, style: "margin-top: 5px"  %>
    </div>

    <div>
      <%= form.label :client_id, style: "display: block; color: #FFFFFF; padding-top: 5px" %>
      <%# <%= form.collection_select :client_id, @clients %> 
      <%= form.select :client_id, options_for_select(@clients), { include_blank: "Choose the client"}, style: "margin-top: 5px"  %> 
    </div>

    
    <div class="mt-4 mb-2">
      <%= form.submit class: "btn add-button" %>
    </div>
  <% end %>
</div>